<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeMAUI.Views.ProductDetailPage"
             Title="Product Details">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Image Source="{Binding Product.Image}" HeightRequest="200" />
            <Label Text="{Binding Product.Title}" FontAttributes="Bold" FontSize="20"/>
            <Label Text="{Binding Product.Price, StringFormat='Price: ${0:F2}'}" FontSize="18" />
            <Label Text="{Binding Product.Description}" FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>